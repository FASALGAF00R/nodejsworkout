            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Number</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.products %>
                            </td>
                            <td>
                                <%= item.numbers %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>



            <div class="logout" style="    margin-top: -454px;">
                <a href="/router/logout" class="button" >Logout</a>
            </div>
    </div>
    </div>
