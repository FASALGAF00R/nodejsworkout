<%-include('header') %>
    <style>
        table {
            margin: auto;
            border-collapse: separate;
            width: 60%;
            border: 2px solid #3498db;

        }

        th,
        td {
            border: 1px solid #3498db;
        }

        th {
            background-color: #3498db;
            color: white;
        }
    </style>


